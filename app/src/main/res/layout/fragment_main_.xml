<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main_Activity$PlaceholderFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Where do you want to eat?"
        android:height="20dp"
        android:textSize="18dp"
        android:visibility="visible"
        android:layout_alignBottom="@+id/BackButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/BackButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackButton"
        android:background="@drawable/magnify"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logothree"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/BackButton"
        android:layout_alignEnd="@+id/BackButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espana"
        android:id="@+id/E_button"
        android:clickable="true"
        android:onClick="Estreet"
        android:background="#ffe6dd3b"
        android:textSize="20dp"
        android:textColor="#FFD2FFAC"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/backButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dapitan"
        android:id="@+id/Dapitanbutton"
        android:clickable="true"
        android:onClick="Dstreet"
        android:layout_alignRight="@+id/BackButton"
        android:layout_alignEnd="@+id/BackButton"
        android:background="#fff0c78a"
        android:layout_alignTop="@+id/E_button"
        android:layout_above="@+id/P_button"
        android:textSize="20dp"
        android:textColor="#FFD2FFAC"
        android:layout_alignLeft="@+id/L_Button"
        android:layout_alignStart="@+id/L_Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lacson"
        android:id="@+id/L_Button"
        android:clickable="true"
        android:onClick="Lstreet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/backButton"
        android:background="#ff44d0f9"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#ffd2ffac"
        android:layout_alignTop="@+id/P_button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P-noval"
        android:id="@+id/P_button"
        android:clickable="true"
        android:onClick="Pstreet"
        android:background="#fffc949a"
        android:textSize="20dp"
        android:textColor="#FFD2FFAC"
        android:layout_below="@+id/E_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/E_button"
        android:layout_alignEnd="@+id/E_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:background="@drawable/map"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/L_Button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
